{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    // Modules
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    // Emit
    "noEmit": true,
    "verbatimModuleSyntax": true,
    // JavaScript Support
    "allowJs": true,
    // Interop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    // Language and Environment
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "target": "ESNext",
    "jsx": "react-jsx",
    // Completeness
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
    },
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
